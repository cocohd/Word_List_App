<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shadow.word_list_app">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.shadow.word_list_app.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.shadow.word_list_app.SearchActivity" />
        <activity android:name="com.example.shadow.word_list_app.SecondActivity"
            android:label="英汉词典"/>
        <activity android:name="com.example.shadow.word_list_app.MainActivity"
            android:label="单词列表"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>